    <meta charset="UTF-8">
    <title>Pesanan</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }
        body {
          font-family: "Inter", sans-serif;
          background-color: #f4f4f9;
          padding: 20px;
        }
        .center {
            text-align: center;
        }
        .formbold-main-wrapper {
          display: flex;
          align-items: center;
          justify-content: center;
          padding: 48px;
        }
        .formbold-form-wrapper {
          margin: 0 auto;
          max-width: 550px;
          width: 100%;
          background: white;
          padding: 30px;
          border-radius: 8px;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .formbold-input-flex {
          display: flex;
          gap: 20px;
          margin-bottom: 22px;
        }
        .formbold-input-flex > div {
          width: 50%;
          display: flex;
          flex-direction: column-reverse;
        }
        .formbold-textarea {
          display: flex;
          flex-direction: column-reverse;
        }
        .formbold-form-input {
          width: 100%;
          padding-bottom: 10px;
          border: none;
          border-bottom: 1px solid #DDE3EC;
          background: #FFFFFF;
          font-weight: 500;
          font-size: 16px;
          color: #07074D;
          outline: none;
          resize: none;
        }
        .formbold-form-input::placeholder {
          color: #536387;
        }
        .formbold-form-input:focus {
          border-color: #6A64F1;
        }
        .formbold-form-label {
          color: #07074D;
          font-weight: 500;
          font-size: 14px;
          line-height: 24px;
          display: block;
          margin-bottom: 18px;
        }
        .formbold-form-input:focus + .formbold-form-label {
          color: #6A64F1;
        }
        .formbold-input-file {
          margin-top: 30px;
        }
        .formbold-input-file input[type="file"] {
          display: none;
        }
        .formbold-input-label {
          display: flex;
          align-items: center;
          justify-content: center;
          padding: 10px 20px;
          background-color: #6A64F1;
          color: white;
          border-radius: 5px;
          cursor: pointer;
        }
        .formbold-input-label:hover {
          background-color: #5a54d1;
        }
        .formbold-btn {
          font-size: 16px;
          border-radius: 5px;
          padding: 12px 25px;
          border: none;
          font-weight: 500;
          background-color: #6A64F1;
          color: white;
          cursor: pointer;
          margin-top: 25px;
          width: 100%;
        }
        .formbold-btn:hover {
          box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>
</head>
<body>
    <center>
        <h1>Masukan Data Anda</h1>
    </center>
    <div class="formbold-main-wrapper">
        <div class="formbold-form-wrapper">
            <form action="/form" method="POST" enctype="multipart/form-data" onsubmit="return validateFile()">
                <div class="formbold-input-flex">
                    <div>
                        <input
                        type="text"
                        name="male_name"
                        id="firstname"
                        placeholder=""
                        class="formbold-form-input"
                        required
                        />
                        <label for="firstname" class="formbold-form-label"> Nama Pengantin Laki-Laki </label>
                    </div>
                    <div>
                        <input
                        type="text"
                        name="female_name"
                        id="lastname"
                        placeholder=""
                        class="formbold-form-input"
                        required
                        />
                        <label for="lastname" class="formbold-form-label"> Nama Pengantin Perempuan </label>
                    </div>
                </div>
    
                <div class="formbold-input-flex">
                    <div>
                        <input
                        type="text"
                        name="bi_male"
                        id="email"
                        placeholder=""
                        class="formbold-form-input"
                        />
                        <label for="email" class="formbold-form-label"> Bapak/Ibu Laki-Laki </label>
                    </div>
                    <div>
                        <input
                        type="text"
                        name="bi_female"
                        id="phone"
                        placeholder=""
                        class="formbold-form-input"
                        />
                        <label for="phone" class="formbold-form-label"> Bapak/Ibu Perempuan </label>
                    </div>
                </div>
    
                <div class="formbold-textarea">
                    <textarea
                        rows="6"
                        name="quotes"
                        id="message"
                        placeholder="Masukan Alamat dan Sertakan No.Hp"
                        class="formbold-form-input"
                    ></textarea>
                    <label for="message" class="formbold-form-label"> Alamat </label>
                </div>
    
                <div class="formbold-textarea">
                    <textarea
                        rows="6"
                        name="theme"
                        id="message"
                        placeholder="ketik Ya bila data yang anda masukan sudah benar"
                        class="formbold-form-input"
                    ></textarea>
                    <label for="message" class="formbold-form-label"> Tema </label>
                </div>
    
                <div class="formbold-input-file">
                    <div class="formbold-filename-wrapper">
                        <span class="formbold-filename">
                            Masukan Foto Dalam Bentuk Zip/RAR
    
