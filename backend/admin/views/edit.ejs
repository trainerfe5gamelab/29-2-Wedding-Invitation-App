                    </g>
                    <defs>
                    <clipPath id="clip0_1670_1531">
                    <rect width="20" height="20" fill="white"/>
                    </clipPath>
                    </defs>
                    </svg>
                  </label>
                <% } else { %>
                  <label for="upload" class="formbold-input-label"> Upload File </label>
                <% } %>
                <input
                  type="file"
                  name="photo"
                  id="upload"
                  class="formbold-form-input"
                />
              </div>
              <button type="submit" class="formbold-btn">Submit</button>
            </form>
        </div>
    </div>
    <a href="/">Kembali Ke Dashboard</a>
</body>
</html>
